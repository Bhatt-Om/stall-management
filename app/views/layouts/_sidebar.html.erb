<aside id="sidebar"
         class="fixed inset-y-0 left-0 w-72 bg-white shadow-lg transform -translate-x-full transition-transform duration-300 z-40
                lg:translate-x-0 lg:static lg:shadow-none flex flex-col">
    <div class="flex items-center justify-between p-4 border-b">
      <span class="font-bold text-xl">My App</span>
      <!-- Close button inside the sidebar (mobile) -->
      <button id="close-btn" class="p-2 rounded-lg hover:bg-gray-100 lg:hidden" aria-label="Close menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
             viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <nav class="p-2 space-y-1 flex-1">
      <%= link_to "Dashboard", customer_dashboard_path, 
          class: "block px-3 py-2 rounded hover:bg-gray-200" %>
    </nav>
    <div class="p-4 border-t">
      <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
          class: "block px-3 py-2 rounded text-red-600 text-center   hover:bg-red-100" %>
    </div>
  </aside>