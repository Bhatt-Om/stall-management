<%= form_with(model: [:api, :v1, role], data: { turbo_frame: "_top" }, class: "space-y-4") do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, 
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
  </div>

  <div>
    <%= f.submit class: "w-full bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg shadow" %>
  </div>
<% end %>
