<div class="p-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-xl font-bold">Roles</h1>
    <%= link_to "New Role", new_api_v1_role_path, 
      class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg shadow" %>
  </div>

  <div class="bg-white shadow rounded-lg divide-y">
    <% @roles.each do |role| %>
      <div class="flex justify-between items-center p-4">
        <span class="font-medium text-gray-800"><%= role.name %></span>
        <div class="space-x-2">
          <%= link_to "Show", api_v1_role_path(role), class: "text-blue-600 hover:underline" %>
          <%= link_to "Edit", edit_api_v1_role_path(role), class: "text-green-600 hover:underline" %>
          <%= link_to "Delete", api_v1_role_path(role), 
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                class: "text-red-600 hover:underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
